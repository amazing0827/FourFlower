<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout class="androidx.appcompat.app.AlertController$RecycleListView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/title_f"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="게시글 제목"
            android:textSize="20dp"
            android:fontFamily="@font/suitemedium"
            android:textColor="#758652"/>

        <TextView
            android:id="@+id/content_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="30dp"
            android:textColor="#0D253C"
            android:fontFamily="@font/suitemedium"
            android:text="내용~"/>

        <ImageView
            android:id="@+id/like_f"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/h_thumbs"
            />
        <TextView
            android:id="@+id/like_count"

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="40dp"

            android:text="XXX"/>

        <ImageView
            android:id="@+id/time_f"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/h_clock"
            />

        <TextView
            android:id="@+id/timeline"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="110dp"
            android:textColor="#0D253C"
            android:text="XXX"/>
        <ImageView
            android:id="@+id/bookmark"

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="110dp"
            android:text="XXX"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/h_bookmark"
            />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="3px"
        android:background="#EBEBF0"
        android:layout_marginTop="140dp" />
    <RelativeLayout
        android:layout_marginLeft="170dp"
        android:layout_width="wrap_content"
        android:layout_height="150dp">
        <ImageView
            android:id="@+id/post_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/h_testimg"/>

    </RelativeLayout>




</RelativeLayout>

